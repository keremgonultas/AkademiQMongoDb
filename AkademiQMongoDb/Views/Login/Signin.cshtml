@using AkademiQMongoDb.DTOs.AdminDtos
@* Kendi projende giriş için oluşturduğun DTO adını buraya yazmalısın (örn: LoginAdminDto) *@
@model LoginAdminDto

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Yönetici Giriş Paneli">

    <title>Yönetici Giriş Sayfası</title>

    <link rel="shortcut icon" href="/UI/assets/img/favicon.png" type="image/x-icon">

    <link href="/UI/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/UI/assets/css/font-awesome.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .modern-login-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 15px;
        }

        .modern-login-card {
            background: #ffffff;
            border-radius: 24px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.08);
            overflow: hidden;
            max-width: 1100px;
            width: 100%;
        }

        .img-wrapper {
            height: 100%;
            position: relative;
        }

            .img-wrapper img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                min-height: 600px;
            }

        .logo-overlay {
            position: absolute;
            top: 30px;
            left: 30px;
            background: rgba(255,255,255,0.9);
            padding: 10px 20px;
            border-radius: 12px;
        }

        .form-wrapper {
            padding: 60px 50px;
        }

            .form-wrapper h2 {
                font-weight: 800;
                color: #2c3e50;
                margin-bottom: 10px;
                font-size: 32px;
            }

            .form-wrapper p {
                color: #7f8c8d;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 12px;
            padding: 15px 20px;
            border: 1.5px solid #e1e8ed;
            background-color: #f8fbff;
            transition: all 0.3s ease;
            height: auto;
            font-size: 15px;
        }

            .form-control:focus {
                border-color: #e74c3c;
                background-color: #ffffff;
                box-shadow: 0 0 0 0.25rem rgba(231, 76, 60, 0.15);
            }

        .btn-register {
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px;
            width: 100%;
            font-weight: 700;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: 0.3s;
            margin-top: 10px;
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.2);
        }

            .btn-register:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
                color: white;
            }

        .login-alternative {
            margin-top: 40px;
            text-align: center;
        }

            .login-alternative h4 {
                font-size: 14px;
                color: #95a5a6;
                margin-bottom: 20px;
                position: relative;
            }

                .login-alternative h4::before, .login-alternative h4::after {
                    content: "";
                    position: absolute;
                    top: 50%;
                    width: 25%;
                    height: 1px;
                    background: #e1e8ed;
                }

                .login-alternative h4::before {
                    left: 0;
                }

                .login-alternative h4::after {
                    right: 0;
                }

        .social-btns {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-bottom: 30px;
            list-style: none;
            padding: 0;
        }

            .social-btns a {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                padding: 12px 25px;
                border-radius: 10px;
                border: 1px solid #e1e8ed;
                color: #34495e;
                font-weight: 600;
                text-decoration: none;
                transition: 0.3s;
            }

                .social-btns a:hover {
                    background: #f8fbff;
                    border-color: #bdc3c7;
                }

            .social-btns .fa-google {
                color: #db4a39;
            }

            .social-btns .fa-facebook-f {
                color: #3b5998;
            }

        .login-link {
            font-weight: 700;
            color: #e74c3c;
            text-decoration: none;
        }

            .login-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div id="preloader">
        <div id="agrica-preloader" class="agrica-preloader">
            <div class="animation-preloader">
                <div class="spinner"></div>
            </div>
        </div>
    </div>

    <div class="modern-login-wrapper">
        <div class="container">
            <div class="row modern-login-card mx-auto">

                <div class="col-lg-5 p-0 d-none d-lg-block">
                    <div class="img-wrapper">
                        <img src="https://images.unsplash.com/photo-1592417817098-8fd3d9eb14a5?q=80&w=1000&auto=format&fit=crop" alt="Giriş Görseli">
                        <div class="logo-overlay">
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="form-wrapper">
                        <h2>Giriş Yap</h2>
                        <p>Yönetici paneline erişmek için bilgilerinizi giriniz.</p>

                        <div asp-validation-summary="ModelOnly" style="color: #e74c3c; font-weight: bold; margin-bottom: 15px;"></div>
                        <form method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Username" placeholder="Kullanıcı Adı" type="text" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input class="form-control" asp-for="Password" placeholder="Şifre" type="password" required>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn-register"> Giriş Yap</button>
                        </form>

                        <div class="login-alternative">
                            <h4>Veya Şununla Giriş Yap</h4>
                            <ul class="social-btns">
                                <li>
                                    <a href="#"><i class="fab fa-google"></i> Google</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fab fa-facebook-f"></i> Facebook</a>
                                </li>
                            </ul>
                            <p>
                                Henüz bir hesabınız yok mu? <a href="/Register/Signup" class="login-link">Şimdi Kayıt Olun</a>
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="/UI/assets/js/jquery-3.6.0.min.js"></script>
    <script src="/UI/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/UI/assets/js/main.js"></script>
</body>
</html>