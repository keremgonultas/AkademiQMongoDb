@model List<AkademiQMongoDb.DTOs.ChefDTOs.ResultChefDto>

@{
    ViewData["Title"] = "Şeflerimiz";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<div class="breadcrumb-area text-center shadow text-light" style="background: linear-gradient(to right, #111111, #4a0000); padding-top: 170px; padding-bottom: 70px; margin-bottom: 50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h1 style="font-size: 2.8rem; font-weight: 700; text-transform: none; margin-bottom: 10px;">Usta Şeflerimiz</h1>
                <ul class="breadcrumb" style="background: transparent; padding: 0; margin: 0; display: inline-flex; justify-content: center; font-size: 1.1rem;">
                    <li><a href="/Default/Index" style="color: #e5e7eb; text-decoration: none; transition: 0.3s;"><i class="fas fa-home"></i> Ana Sayfa</a></li>
                    <li style="color: #9ca3af; margin: 0 12px;">/</li>
                    <li class="active" style="color: #ef4444; font-weight: bold;">Şefler</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="team-area default-padding bottom-less">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center" style="margin-bottom: 50px;">
                <h2 style="font-weight: 800; color: #1f2937;">Lezzetin <span style="color: #e60000;">Mimarları</span></h2>
                <p style="color: #6b7280; font-size: 1.1rem;">Mutfağımızdaki her bir tabak, alanında uzman şeflerimizin tutkusu ve yılların tecrübesiyle sanata dönüşüyor.</p>
            </div>
        </div>

        <div class="row">

            @if (Model == null || Model.Count == 0)
            {
                <div class="col-12 text-center" style="padding: 50px 0;">
                    <i class="fas fa-user-slash" style="font-size: 4rem; color: #e5e7eb; margin-bottom: 15px;"></i>
                    <h4 style="color: #6b7280;">Şu an için kayıtlı şef bulunmamaktadır.</h4>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 single-item">
                        <div class="item" style="background: #ffffff; border-radius: 15px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.08); margin-bottom: 30px; transition: transform 0.3s ease;" onmouseover="this.style.transform='translateY(-10px)'" onmouseout="this.style.transform='translateY(0)'">

                            <div class="thumb" style="width: 100%; aspect-ratio: 600 / 800; overflow: hidden;">
                                <img src="@item.ImageUrl" alt="@item.Name" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>

                            <div class="info" style="padding: 20px; text-align: center; border-top: 3px solid #e60000;">
                                <h4 style="margin: 0; font-weight: 800; color: #1f2937; font-size: 1.4rem;">@item.Name</h4>
                                <span style="color: #e60000; font-weight: 600; font-size: 0.95rem; text-transform: uppercase; letter-spacing: 1px;">@item.Title</span>
                            </div>

                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>