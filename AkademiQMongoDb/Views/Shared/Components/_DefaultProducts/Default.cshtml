@model List<ResultProductDto>

<div class="food-menu-style-two-area default-padding bg-cover" style="background-image: url(/UI/assets/img/shape/3.jpg);">
    <div class="container">

        <div class="food-menu-style-two">
            <div class="row align-center">
                <div class="col-lg-5">
                    <div class="food-menu-style-two-thumb">
                        <img class="wow fadeInDown" src="/UI/assets/img/menu/7.jpg" alt="Image Not Found">
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="food-menu-style-two-content wow fadeInUp">
                        <h4 class="sub-heading" style="text-transform: none;">ANA YEMEKLERİMİZ</h4>

                        <ul class="meal-items">
                            @foreach (var item in Model.Where(x => x.CategoryName == "Ana Yemekler"))
                            {
                                <li>
                                    <div class="thumbnail">
                                        <img src="@item.ImageUrl" alt="Image Not Found" style="width:80px; height:80px; object-fit:cover;">
                                    </div>
                                    <div class="content">
                                        <div class="top">
                                            <div class="title">
                                                <h4><a href="shop-single.html">@item.Name</a></h4>
                                            </div>
                                            <div class="price">
                                                <span>@item.Price ₺</span>
                                            </div>
                                        </div>
                                        <div class="bottom">
                                            <div class="left">
                                                <p>@item.Description</p>
                                            </div>
                                            <div class="right">
                                                <p><i class="fas fa-utensils"></i> @item.CategoryName</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="food-menu-style-two">
            <div class="row align-center">
                <div class="col-lg-5">
                    <div class="food-menu-style-two-thumb">
                        <img class="wow fadeInUp" src="/UI/assets/img/menu/8.jpg" alt="Image Not Found">
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="food-menu-style-two-content wow fadeInDown">
                        <h4 class="sub-heading" style="text-transform: none;">TATLILARIMIZ</h4>

                        <ul class="meal-items">
                            @foreach (var item in Model.Where(x => x.CategoryName == "Tatlılar"))
                            {
                                <li>
                                    <div class="thumbnail">
                                        <img src="@item.ImageUrl" alt="Image Not Found" style="width:80px; height:80px; object-fit:cover;">
                                    </div>
                                    <div class="content">
                                        <div class="top">
                                            <div class="title">
                                                <h4><a href="shop-single.html">@item.Name</a></h4>
                                            </div>
                                            <div class="price">
                                                <span>@item.Price ₺</span>
                                            </div>
                                        </div>
                                        <div class="bottom">
                                            <div class="left">
                                                <p>@item.Description</p>
                                            </div>
                                            <div class="right">
                                                <p><i class="fas fa-cookie"></i> @item.CategoryName</p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>