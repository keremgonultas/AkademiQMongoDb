@model AkademiQMongoDb.DTOs.AboutDTOs.CreateAboutDto

@{
    ViewData["Title"] = "Yeni Yazı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Kendi yoluna göre düzelt!
}

<div class="container-fluid">
    <h4 class="page-title">Hakkımızda İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yeni Hakkımızda Yazısı Ekle</div>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label>Üst Başlık (SubTitle - Örn: Welcome At)</label>
                            <input type="text" class="form-control" asp-for="SubTitle" required>
                        </div>
                        <div class="form-group">
                            <label>Ana Başlık (Title - Örn: Restan Restaurant)</label>
                            <input type="text" class="form-control" asp-for="Title" required>
                        </div>
                        <div class="form-group">
                            <label>Açıklama / Metin</label>
                            <textarea class="form-control" rows="5" asp-for="Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label>Görsel Linki (ImageUrl)</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" required>
                        </div>
                        <div class="form-group">
                            <label>Video Linki (Youtube URL vb.)</label>
                            <input type="text" class="form-control" asp-for="VideoUrl">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
                        <a href="/Admin/About/Index" class="btn btn-danger mt-3 ml-2">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>