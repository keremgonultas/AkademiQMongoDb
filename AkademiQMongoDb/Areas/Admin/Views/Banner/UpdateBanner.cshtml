@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Banner Güncelleme Sayfası</h1>

<form method="post">
    
    <input type="hidden" asp-for="Id" />

    <label>Banner Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>
    <br />

    <label>Banner Açıklaması</label>
    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
    <span class="text-danger" asp-validation-for="Description"></span>
    <br />

    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>
    <br />

    <button class="btn btn-outline-success">Güncelle</button>
</form>