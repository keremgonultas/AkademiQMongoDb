@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Kategori Adı</label>
        <input type="text" class="form-control" asp-for="Name" required>
    </div>

    <div class="form-group">
        <label>Kategori Slider Görseli (URL)</label>
        <input type="text" class="form-control" asp-for="ImageUrl" required>
    </div>

    <button type="submit" class="btn btn-success mt-3">Güncelle</button>
</form>

