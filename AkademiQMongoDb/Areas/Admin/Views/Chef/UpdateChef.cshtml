@model AkademiQMongoDb.DTOs.ChefDTOs.UpdateChefDto

@{
    ViewData["Title"] = "Şef Güncelle";
    // Kendi admin layout'unun yolunu buraya yazmayı unutma:
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Şef İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Şef Bilgilerini Güncelle</div>
                </div>
                <div class="card-body">

                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label>Şef Adı Soyadı</label>
                            <input type="text" class="form-control" asp-for="Name" required>
                        </div>
                        <div class="form-group">
                            <label>Unvanı</label>
                            <input type="text" class="form-control" asp-for="Title" required>
                        </div>
                        <div class="form-group">
                            <label>Fotoğraf Bağlantısı (URL)</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" required>
                        </div>
                        <div class="form-group">
                            <label>Şefin Durumu</label>
                            <select class="form-control" asp-for="Status">
                                <option value="true">Aktif (Sitede Görünsün)</option>
                                <option value="false">Pasif (Sitede Gizlensin)</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success mt-3">Değişiklikleri Kaydet</button>
                        <a href="/Admin/Chef/Index" class="btn btn-danger mt-3 ml-2">İptal Et</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>