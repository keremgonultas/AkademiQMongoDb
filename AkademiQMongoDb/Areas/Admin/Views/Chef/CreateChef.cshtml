@model AkademiQMongoDb.DTOs.ChefDTOs.CreateChefDto

@{
    ViewData["Title"] = "Yeni Şef Ekle";
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Şef İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yeni Şef Ekle</div>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div class="form-group">
                            <label>Şef Adı Soyadı</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Örn: Alexander Wood" required>
                        </div>
                        <div class="form-group">
                            <label>Unvanı</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Örn: Executive Chef" required>
                        </div>
                        <div class="form-group">
                            <label>Fotoğraf Bağlantısı (URL)</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Örn: /UI/assets/img/team/1.jpg" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Şefi Sisteme Kaydet</button>
                        <a href="/Admin/Chef/Index" class="btn btn-danger mt-3 ml-2">İptal Et ve Geri Dön</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>