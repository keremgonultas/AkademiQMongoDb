@model List<AkademiQMongoDb.DTOs.ChefDTOs.ResultChefDto>

@{
    ViewData["Title"] = "Şef Listesi";
    // Kendi admin layout'unun yolunu buraya yaz:
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h4 class="page-title">Şef İşlemleri</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Kayıtlı Şefler</div>
                </div>
                <div class="card-body">
                    <a href="/Admin/Chef/CreateChef" class="btn btn-primary mb-3">Yeni Şef Ekle</a>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover mt-3">
                            <thead class="thead-light">
                                <tr>
                                    <th>Görsel</th>
                                    <th>Ad Soyad</th>
                                    <th>Unvan</th>
                                    <th>Durum</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Name" style="width: 60px; height: 80px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd;">
                                        </td>
                                        <td class="align-middle">@item.Name</td>
                                        <td class="align-middle">@item.Title</td>
                                        <td class="align-middle">
                                            @if (item.Status)
                                            {
                                                <span style="background-color: #10b981; color: #ffffff; padding: 6px 12px; border-radius: 6px; font-weight: bold; font-size: 0.85rem; display: inline-block;">Aktif</span>
                                            }
                                            else
                                            {
                                                <span style="background-color: #ef4444; color: #ffffff; padding: 6px 12px; border-radius: 6px; font-weight: bold; font-size: 0.85rem; display: inline-block;">Pasif</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <a href="/Admin/Chef/DeleteChef/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu şefi silmek istediğinize emin misiniz?');">Sil</a>
                                        </td>
                                        <td class="align-middle">
                                            <a href="/Admin/Chef/UpdateChef/@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>